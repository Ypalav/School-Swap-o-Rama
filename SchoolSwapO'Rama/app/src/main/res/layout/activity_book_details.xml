<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cyu25_a3.cs442.com.Activity2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="false"
        android:layout_alignEnd="@+id/buyerCancleBt"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView android:text="BookName:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerNametext"
        android:layout_column="10"
        android:layout_alignParentTop="false"
        android:layout_alignEnd="@+id/buyBt"
        android:layout_above="@+id/buyerISBNtext"
        android:layout_alignTop="@+id/imageView" />

    <TextView
        android:text="ISBN:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerISBNtext"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookName"
        android:layout_toLeftOf="@+id/buyerCancleBt"
        android:layout_toStartOf="@+id/buyerCancleBt" />

    <TextView
        android:text="Author:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerAuthortext"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookISBN"
        android:layout_toLeftOf="@+id/buyerBookISBN"
        android:layout_toStartOf="@+id/buyerBookISBN" />

    <TextView
        android:text="Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerDescriptiontext"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookAuthor"
        android:layout_toLeftOf="@+id/buyerBookDescription"
        android:layout_toStartOf="@+id/buyerBookDescription" />

    <TextView
        android:text="Price:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerPricetext"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookDescription"
        android:layout_alignLeft="@+id/buyerISBNtext"
        android:layout_alignStart="@+id/buyerISBNtext" />

    <TextView
        android:text="Condidtion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBConditiontext"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookPrice"
        android:layout_toLeftOf="@+id/buyerBookPrice"
        android:layout_toStartOf="@+id/buyerBookPrice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy it!"
        android:id="@+id/buyBt"
        android:layout_column="10"
        android:layout_below="@+id/buyerBookCondition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/buyerCancleBt"
        android:layout_column="10"
        android:layout_alignBottom="@+id/buyBt"
        android:layout_toEndOf="@+id/buyBt"
        android:onClick="clickCancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookName"
        android:layout_column="10"
        android:text="name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buyerAuthortext"
        android:layout_toEndOf="@+id/buyerAuthortext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookISBN"
        android:layout_column="10"
        android:text="5555"
        android:layout_below="@+id/buyerBookName"
        android:layout_toRightOf="@+id/buyerPricetext"
        android:layout_toEndOf="@+id/buyerPricetext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookAuthor"
        android:layout_column="10"
        android:text="Bob"
        android:layout_below="@+id/buyerBookISBN"
        android:layout_toRightOf="@+id/buyerAuthortext"
        android:layout_toEndOf="@+id/buyerAuthortext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookDescription"
        android:layout_column="10"
        android:text="about"
        android:layout_below="@+id/buyerBookAuthor"
        android:layout_toRightOf="@+id/buyerISBNtext"
        android:layout_toEndOf="@+id/buyerISBNtext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookPrice"
        android:layout_column="10"
        android:text="10"
        android:layout_below="@+id/buyerBookDescription"
        android:layout_toRightOf="@+id/buyerPricetext"
        android:layout_toEndOf="@+id/buyerPricetext" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buyerBookCondition"
        android:layout_column="10"
        android:text="good"
        android:layout_below="@+id/buyerBookPrice"
        android:layout_toRightOf="@+id/buyerBConditiontext"
        android:layout_toEndOf="@+id/buyerBConditiontext" />

</RelativeLayout>
